<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.maogm.xuanmibeitie.AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/about_xuanmibeitie"
        android:id="@+id/about_xuanmibeitie"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xuanmibeitie_brief"
        android:id="@+id/brief"
        android:layout_below="@+id/about_xuanmibeitie"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/about_me"
        android:layout_below="@+id/brief"
        android:layout_marginTop="20dp"
        android:id="@+id/about_me" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/about_me"
        android:layout_marginTop="10dp">
        <ImageButton
            android:id="@+id/icon_website"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/website"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/icon_github"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/github"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/icon_weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/weibo"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>
